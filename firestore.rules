rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    function isAdmin() {
      return isAuthenticated() && getUserRole() == 'admin';
    }
    
    function isProducer() {
      return isAuthenticated() && getUserRole() == 'producer';
    }
    
    function isCustomer() {
      return isAuthenticated() && getUserRole() == 'customer';
    }

    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /memorialPages/{pageId} {
      allow read: if true;
      allow list: if request.auth != null;
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }

    match /comments/{commentId} {
      allow read: if true;
      allow create: if true;
      allow update: if isOwner(resource.data.pageOwnerId) || isAdmin();
      allow delete: if isOwner(resource.data.pageOwnerId) || isAdmin();
    }

    match /orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isProducer() || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isProducer() || isAdmin();
      allow delete: if isAdmin();
    }

    match /supportTickets/{ticketId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /analytics/{docId} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}
